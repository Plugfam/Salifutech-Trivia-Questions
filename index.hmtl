<body>
            <div class="login-container">
              <h2>üîê Login</h2>
                 <form id="loginForm">
               <input type="text" id="username" placeholder="Username" required />
      <input type="password" id="password" placeholder="Password" required />
      <button type="submit" class="btn login">Login</button>
          
                 </form>           

          <button onclick="window.location.href='idpass.html'" class="btn get-userpass">GET USERNAME PASS</button>

    <div id="popup" class="popup"></div>
  </div>

  <script>
    const form = document.getElementById('loginForm');
    const popup = document.getElementById('popup');

    form.addEventListener('submit', function(event) {
      event.preventDefault();
      const username = document.getElementById('username').value.trim();
      const password = document.getElementById('password').value.trim();

      if (username === 'Plugtech' && password === '1234') {
        popup.textContent = '‚úÖ Login successful!';
        popup.className = 'popup success';
        setTimeout(() => {
          window.location.href = 'dashboard.html'; // Redirect after success
        }, 1500);
      } else {
        popup.textContent = '‚ùå Wrong ID or Password!';
        popup.className = 'popup error';
      }
    });
  </script>
</body>
     
                           
